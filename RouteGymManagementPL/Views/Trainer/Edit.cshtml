@using RouteGymManagementDAL.Entities.Enums
@model TrainerToUpdateViewModel 
<div class="container mt-4">
    <header class="mb-4">
        <h3 class="text-primary-color">Edit Trainer</h3>
        <p class="text-muted">Update trainer information</p>
    </header>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="mb-4 pb-3 border-bottom">
                        <small class="text-muted d-block mb-1">Editing Profile For</small>
                        <h4 class="mb-0 text-black">@Model.Name</h4>
                    </div>

                    @Html.ValidationMessage("DataMissed",new {@class = "text-danger"} )
                    <form asp-action="Edit" method="post">
                        <!-- Personal Information -->
                        <input asp-for="Name" hidden />
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Personal Information</h5>
                            <hr class="mt-2">
                        </div>
                        <div class="row g-3 mb-4">


                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label"></label>
                                <input asp-for="Email" type="text" class="form-control" />
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Phone" class="form-label"></label>
                                <input asp-for="Phone" type="text" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BulidingNumber" class="form-label">BuildingNumber</label>
                                <input asp-for="BulidingNumber" type="text" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Street</label>
                                <input asp-for="Street" type="text" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="City" class="form-label">City</label>
                                <input asp-for ="City" type="text" class="form-control" />
                            </div>
                        </div>

                        <!-- Professional Information -->
                        <div class="section-header mb-3">
                            <h5 class="text-primary fw-bold">Professional Information</h5>
                            <hr class="mt-2">
                        </div>
                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Specialties" class="form-label fw-semibold">
                                    Specializations <span class="text-danger">*</span>
                                </label>
                                <select asp-for="Specialties" asp-items="Html.GetEnumSelectList<Specialties>()" class="form-select">
                                    <option value="">-- Select Specialties --</option>
                                </select>
                                <span asp-validation-for="Specialties" class="text-danger"></span>

                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline">
                                <i class="bi bi-arrow-left me-1"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-fill">
                                <i class="bi bi-check-lg me-1"></i>Update Trainer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="../js/jquery.validate.min.js"></script>
    <script src="../js/jquery.validate.unobtrusive.min.js"></script>
}